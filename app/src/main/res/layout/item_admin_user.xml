<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:background="@drawable/admin_user_row_background">

    <TextView
        android:id="@+id/user_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Anna"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_last_name"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/menu_item_background"
        />

    <TextView
        android:id="@+id/user_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nowak"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/user_first_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_email"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/menu_item_background"
        />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="annanowak123@gmail.com"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/user_last_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_edit_button"
        app:layout_constraintHorizontal_weight="2"
        android:background="@color/menu_item_background"
        />

    <ImageButton
        android:id="@+id/user_edit_button"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:background="@drawable/form_button"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toStartOf="@+id/user_delete_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="15dp"
        />

    <ImageButton
        android:id="@+id/user_delete_button"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:background="@drawable/form_button"
        android:backgroundTint="@color/delete_btn_color"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
