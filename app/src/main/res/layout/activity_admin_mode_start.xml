<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminModeStartActivity">

    <ImageView
        android:id="@+id/page_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/page_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The roastery house"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_logo"
        android:layout_marginTop="40dp"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        />

    <TextView
        android:id="@+id/page_subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witamy w trybie administratora!\n Wprowadź swoje hasło"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_header"
        android:layout_marginTop="40dp"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        />

    <EditText
        android:id="@+id/admin_start_screen_login_input"
        android:layout_width="454dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/page_subheader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:textSize="24sp"
        android:hint="Hasło"
        />

    <Button
        android:id="@+id/admin_start_screen_cancel_btn"
        android:layout_width="324dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toBottomOf="@id/admin_start_screen_login_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="250dp"
        style="@style/CustomFormButton"
        android:text="Anuluj"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/admin_start_screen_login_btn"
        android:layout_width="324dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toBottomOf="@id/admin_start_screen_login_input"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginRight="250dp"
        style="@style/CustomFormButton"
        android:text="Zaloguj się"
        android:textSize="24sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>