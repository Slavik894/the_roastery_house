<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/admin_mode_users_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Users"
        android:layout_marginTop="53dp"
        android:textStyle="bold"
        android:textSize="26sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_mode_users_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/admin_mode_users_screen_title"
        android:layout_marginTop="60dp"
        tools:listitem="@layout/item_admin_user"
        app:flow_verticalGap="8dp"
        />
    
    <Button
        android:layout_width="380dp"
        android:layout_height="95dp"
        style="@style/CustomFormButton"
        app:layout_constraintTop_toBottomOf="@id/admin_mode_users_recycler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Dodaj nowego uÅ¼ytkownika"
        android:textStyle="bold"
        android:textSize="27sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>